<div class="row">
  <div class="col-xs-12">
    <h1 class="page-header"><%= @diver.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="pull-right">
      <%= link_to('Add a List', new_diver_list_path(@diver), class: 'btn btn-primary') %>
    </div>
  </div>
</div>

<div class="row">
  <% @diver.lists.each do |list| %>
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <i class="fa fa-list fa-fw"></i> <%= list.name %>
        </div>
        <div class="panel-body">
          <%= render partial: 'shared/list_table', locals: { list: list } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
