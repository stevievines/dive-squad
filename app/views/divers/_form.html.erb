<%= form_for @diver || Diver.new do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :team_id %><br />
      <%= f.select :team_id, options_from_collection_for_select(@teams, "id", "name"), {}, { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, { autofocus: true, class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :join_date %><br />
      <%= f.date_field :join_date, { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :birthday %><br />
      <%= f.date_field :birthday, { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email, { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, { class: 'form-control' } %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: 'btn btn-primary' %>
  </div>
<% end %>
