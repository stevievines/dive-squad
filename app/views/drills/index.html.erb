<h1>Drills for <%= @skill.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Progression</th>
      <th>Skill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drills.each do |drill| %>
      <tr>
        <td><%= link_to drill.name, drill %></td>
        <td><%= drill.progression %></td>
        <td><%= drill.skill %></td>
        <td><%= link_to 'Destroy', [@skill, drill], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drill', new_skill_drill_path(@skill) %>
