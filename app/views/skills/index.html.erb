<h1><%= @fundamental.name %> Skills</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= link_to skill.name, [@fundamental, skill] %></td>
        <td><%= link_to 'Destroy', [@fundamental, skill], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Skill', new_fundamental_skill_path(@fundamental) %>
