<div class="row">
  <div class="col-xs-12">
    <h1 class="page-header">Your Squad</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-6 col-xs-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-users fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge" id="teams-count"><%= @teams.count %></div>
            <div>Team(s)</div>
          </div>
        </div>
      </div>
      <a href="#">
        <div class="panel-footer">
          <span class="pull-left">View Details</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      </a>
    </div>
  </div>
  <div class="col-xs-6 col-xs-6">
    <div class="panel panel-green">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-anchor fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge" id="divers-count"><%= @divers.count %></div>
            <div>Diver(s)</div>
          </div>
        </div>
      </div>
      <a href="#">
        <div class="panel-footer">
          <span class="pull-left">View Details</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      </a>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> Teams
      </div>
      <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Divers</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id='teams'>
                <%= render @teams %>
              </tbody>
            </table>
          </div>
        <div class="row">
          <div class="col-xs-8 col-xs-offset-2" id="team-form" style="display:none;"></div>
        </div>
        <%= link_to 'Add Team', new_team_path, remote: true, class: 'btn btn-primary pull-right', id: 'add-team-button' %>
      </div>
    </div>
  </div>
  <div class="col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> Divers
      </div>
      <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Birthday</th>
                  <th>Dives</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id='divers'>
                <%= render @divers %>
              </tbody>
            </table>
          </div>
        <div class="row">
          <div class="col-xs-8 col-xs-offset-2" id="diver-form" style="display:none;"></div>
        </div>
        <%= link_to 'Add Diver', new_diver_path, remote: true, class: 'btn btn-primary pull-right', id: 'add-diver-button' %>
      </div>
    </div>
  </div>
</div>
