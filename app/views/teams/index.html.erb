<div class="row">
  <div class="col-xs-12">
    <h1 class="page-header">Your Squad</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-6 col-xs-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-users fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @teams.count %></div>
            <div>Team(s)</div>
          </div>
        </div>
      </div>
      <a href="#">
        <div class="panel-footer">
          <span class="pull-left">View Details</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      </a>
    </div>
  </div>
  <div class="col-xs-6 col-xs-6">
    <div class="panel panel-green">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-anchor fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @current_coach.divers.count %></div>
            <div>Diver(s)</div>
          </div>
        </div>
      </div>
      <a href="#">
        <div class="panel-footer">
          <span class="pull-left">View Details</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      </a>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> Teams
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Divers</th>
              </tr>
            </thead>
            <tbody>
              <% @teams.each do |team| %>
              <tr>
                <td><%= link_to(team.name, team_path(team)) %></td>
                <td><%= team.divers.count %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> Divers
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Birthday</th>
                <th>Dives</th>
              </tr>
            </thead>
            <tbody>
              <% @current_coach.divers.each do |diver| %>
              <tr>
                <td><%= link_to(diver.name, diver_path(diver)) %></td>
                <td><%= diver.birthday %></td>
                <td><%= diver.dives.count %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
